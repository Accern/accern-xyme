{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["es2015"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "resolveJsonModule": true,
        "rootDir": "packages/typescript",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es5"
    },
    "exclude": ["node_modules", "dist"]
}
